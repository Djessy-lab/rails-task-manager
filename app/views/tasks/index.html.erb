<h1>My Tasks</h1>
<hr>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task), class: 'link-task' %>-<%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, delete_task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"} %></li>
  <% end %>
</ul>

<p class="button-create"><%= link_to '<i class="fa-solid fa-plus"></i>'.html_safe, new_task_path %></p>
